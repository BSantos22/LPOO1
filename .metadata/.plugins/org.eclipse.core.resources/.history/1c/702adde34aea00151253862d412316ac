package geometria;

public class Ponto {
	private int x;
	private int y;
	
	public Ponto(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public int getX() {
		return x;
	}
	
	public int getY() {
		return y;
	}
	
	@Override
	public String toString() {
		return ("(" + x + ", " + y + ")");
	}
	
	@Override
	public boolean equals(Ponto p) {
		if (x == p.getX() && y == p.getY()) {
			return true;
		}
		else {
			return false;
		}
	}
	
	@Override
	public int hashcode() {
		return x+y;
	}
}
