package gametest;

import static org.junit.Assert.*;
import org.junit.Test;
import gamelogic.*;


public class TestDragon {
	char[][] m1 = {
			{ 'X', 'X', 'X', 'X', 'X' },
			{ 'X', ' ', ' ', ' ', 'S' },
			{ 'X', ' ', ' ', ' ', 'X' }, 
			{ 'X', 'E', ' ', 'D', 'X' },
			{ 'X', 'X', 'X', 'X', 'X' } };
	
	@Test
	public void testDragonMoves() {
		Game game = new Game();
		
		game.maze.board = m1;
		
		game.hero.x = 0;
		game.hero.y = 0;
		
		game.dragon.x = 3;
		game.dragon.y = 3;
		
		game.hero.move("s", game.maze);
		
		
		
		
		
		
	}
	
	
	
}
